<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/usa.ten.game.tenusa.drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TopActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="普通のうさぎ"
        android:id="@+id/textView"
        android:layout_weight="1"
        android:textSize="37sp"
        android:layout_margin="16dp"
        android:gravity="center_vertical" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/usagiButton"
            android:src="@mipmap/usagi"
            android:background="@null"
            android:scaleType="fitXY" />

        <usa.ten.game.tenusa.drawer.PointDrawerView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/drawPointView"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="進化"
            android:id="@+id/evolution"
            android:layout_weight="1"
            android:elegantTextHeight="false"
            android:textSize="30sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/matching"
            android:layout_weight="1"
            android:text="釣る"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="広告"
        android:id="@+id/advertising"
        android:layout_weight="0.5"
        android:textSize="40sp"
        android:gravity="center" />
</LinearLayout>
